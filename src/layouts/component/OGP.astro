---
interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description, image } = Astro.props as Props;

const url = Astro.url.pathname;
const ogImg = image ? `https://mr-ijij.github.io${image}` : `https://mr-ijij.github.io/ogp/default.png`;
---

<!-- Page Metadata -->
<link rel="canonical" href={url} />
<meta name="description" property="og:description" content={description} />

<!-- OpenGraph Tags -->
<meta property="og:title" content={title} />
<meta property="og:type" content={'article'} />
<meta property="og:url" content={url} />
<meta property="og:locale" content={'ja'} />
<meta property="og:image" content={ogImg} />
<meta property="og:image:alt" content='og image' />
<meta property="og:site_name" content='ijij log' />

<!-- Twitter Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="ijij log" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImg} />
<meta name="twitter:image:alt" content='og image' />